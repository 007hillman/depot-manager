<div id="<%= dom_id drawing %>">
  <p class="my-5">
    <strong class="block font-medium mb-1"> Item :</strong>
    <%= drawing.drink.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity Given out:</strong>
    <%= drawing.quantity %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this drawing", drawing, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this drawing', edit_drawing_path(drawing), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
