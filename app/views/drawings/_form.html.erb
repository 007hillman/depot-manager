<%= form_with(model: drawing, class: "contents") do |form| %>
  <% if drawing.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(drawing.errors.count, "error") %> prohibited this drawing from being saved:</h2>

      <ul>
        <% drawing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :drink_id %>
    <%= form.select :drink_id, options_for_select(Drink.all.order("name ASC").map {|d| [d.name, d.id]}, selected: form.object.drink_id), {},{ class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" }%>
  </div>
  <div class="flex gap-5 w-full">
    <div class="my-5 grow">
      <%= form.label :quantity %>
      <%= form.text_field :quantity, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="my-5">
      <%= form.label :bottle %>
      <%= form.check_box :bottles , class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 "%>
    </div>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
