<section class=" w-full flex flex-col justify-center  items-center">
<h2 class="text-4xl mb-10">Log in</h2>
<%= form_with url: session_path(resource) , class: "block w-1/3 flex flex-col justify-center gap-5" , autocomplete: "new-password" do |form|%>
  <%= form.text_field :email , autocomplete: "new-password",class: " border border-0 border-b-2 border-gray-400 bg-white", placeholder: "enter your email"%>
  <%= form.password_field :password , class: "border border-0 border-b-2 border-gray-400 bg-white " %>
  <% if devise_mapping.rememberable? %>
  <div class="flex  gap-2 items-center">
    <%= form.check_box  :remember_me  , class: "inline" %>
    <%= form.label :remember_me , "Remember me"%>
  </div>
  <% end %>
  <%= form.submit "Sign in " , class: "bg-blue-800 text-white text-center py-2 hover:font-bold hover:bg-blue-400"%>
<% end %>

<%= render "devise/shared/links" %>
</section>