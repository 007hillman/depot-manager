  <div class="flex justify-end">
    <button class="bg-gray-100 font-bold px-3 py-1 rounded-l-full" data-action="click->debts#hide_modal">X</button>
  </div>
  <div class="flex justify-center items-center gap-4 w-full h-full">
    <%= link_to "Receive money", new_payment_url , class: "bg-green-700 uppercase font-regular text-white px-20 py-10 bg-opacity-50 hover:font-bold hover:bg-opacity-90"%>
