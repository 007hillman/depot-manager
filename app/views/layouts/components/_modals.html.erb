      <button class="bg-gray-100 font-bold px-3 py-1 rounded-l-full" data-action="click->debts#hide_mod2">X</button>
    </div>
    <div class="flex justify-center items-center gap-4 w-full h-full">
      <%= link_to "From Supplyer", purchases_path , class: "bg-yellow-400 uppercase font-regular text-white px-20 py-10 bg-opacity-50 hover:font-bold hover:bg-opacity-90"%>
      <%= link_to "Other purchases", new_auxillary_purchase_path , class: "bg-red-700 uppercase font-regular text-white px-20 py-10 bg-opacity-50 hover:font-bold hover:bg-opacity-90"%>
    </div>

  </section>

 
