<div id="<%= dom_id reminder %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Reminder text:</strong>
    <%= reminder.reminder_text %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this reminder", reminder, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this reminder', edit_reminder_path(reminder), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
