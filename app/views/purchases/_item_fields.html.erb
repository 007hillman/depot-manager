<div class="flex flex-row items-center gap-2 item-field">
        <%= form.hidden_field :_destroy %>

          <%= form.select :drink_id, options_for_select(Drink.all.order("name").map {|drink| [drink.name, drink.id]}, selected: form.object.drink_id), {},{class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full list" } %>
          <%= form.text_field :quantity, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", placeholder: "Quantity"%>

          <%= link_to "X", "#", class: "border-2 border-red-200 text-red-300 font-bold text-xl px-2 py-1 text-center hover:bg-red-500 hover:text-white" , data: {action: "click-> command#deleteRow"}%>
      </div>