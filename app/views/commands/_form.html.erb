<div data-controller="command">
  <%= form_with(model: command, class: "contents") do |form| %>
    <% if command.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(command.errors.count, "error") %> prohibited this command from being saved:</h2>

        <ul>
          <% command.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.label :client_name , class: "inline-block text-yellow-500 bg-gray-900"%>
      <%= form.text_field :client_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="flex gap-4 w-full mb-10 ">
      <div class="w-full">
        <%= form.label :amount_paid, class: "inline-block text-yellow-500 bg-gray-900"%>
        <%= form.text_field :amount_paid, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
      <div class="w-full">
        <%= form.label :payment_method , class: "inline-block text-yellow-500 bg-gray-900"%>
        <%= form.select :payment_method,options_for_select([["Cash payment","Cash payment"],["Mobile Money","Mobile money"]]),{} ,{class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full"} %>
      </div>
    </div>
    <div class="mb-10">
    <h1 class="bg-gray-900 text-yellow-600 text-center"> Items Selected</h1>
    <template data-command-target="itemRow">
    <%= form.fields_for :items, Item.new, child_index: 'TEMPLATE_RECORD' do |item| %>
      <%= render "item_fields", form: item %>
    <% end %>
    </template>
    <%= form.fields_for :items do |item| %>
      <%= render "item_fields", form: item %>
  <% end %>
      <div data-command-target="items">

      </div>

      <%= link_to "Add Item +", "#", class: "px-8 py-2 my-5 text-blue-500 block pt-5", data: {action: "click->command#addItem"} %>
    </div>
      <div class="w-full mt-10 mb-10">
        <%= form.label :remark , class: "inline-block text-yellow-500 bg-gray-900 mb-2"%>
        <%= form.rich_text_area :remark,class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div class="my-5">
          <%= form.label :brasseries_crates_given , class: "inline-block text-yellow-500 bg-gray-900"%>
          <%= form.text_field :brasseries_crates_given, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
        </div>
        <div class="my-5">
          <%= form.label :guinness_crates_given , class: "inline-block text-yellow-500 bg-gray-900"%>
          <%= form.text_field :guinness_crates_given, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
        </div>
      </div>
    <div class="inline mb-20">
      <%= form.submit "Validate",class: "rounded-md py-2 px-5 bg-blue-600 text-white inline-block font-extralight cursor-pointer" %>
    </div>
  <% end %>
