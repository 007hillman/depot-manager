<div class=" item-field" data-controller="hello">
        <div class = "block flex flex-col lg:flex-row items-center lg:gap-2">
        <%= form.hidden_field :_destroy %>

          <%= form.select :drink_id, options_for_select(Drink.all.order("name").map {|drink| [drink.name, drink.id]}, selected: form.object.drink_id), {},{class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full list"  , data: {action: "click->command#check_stock"} }%>
          <div class="flex flex-row gap-1">
                <div class="flex flex-row items-center ">
                        <button class="w-1/4 text-white bg-gray-900 flex items-center justify-center h-full" id="down" data-action="click->hello#down">
                                <ion-icon name="arrow-down-outline" size="large"></ion-icon>
                        </button>
                        <%= form.text_field :quantity, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-2/4 lg:w-full h-full", placeholder: "Qtty" , id: "quantity" %>
                        <button class="w-1/4 text-white bg-gray-900 flex items-center justify-center h-full" id="up" data-action="click->hello#up">
                                <ion-icon name="arrow-up-outline" size="large"></ion-icon>
                        </button>
                </div>
                <div class=" flex flex-col items-center justify-end ">
                        <%= form.label "bottles?" %>
                        <%= form.check_box :bottles , class: "block shadow border border-gray-400"%> 
                </div>
                <%= form.text_field :discount , class: "inline-block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-1/5 " %>
                <%= link_to "X", "#", class: "border-2 border-red-200 text-red-300 font-bold text-xl px-2 py-1 text-center hover:bg-red-500 hover:text-white" , data: {action: "click-> command#deleteRow"}%>
          </div>
        </div>
          <div id="display"></div>

  </div>