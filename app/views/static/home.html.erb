<section class="h-full bg-white">
    <div class="flex justify-end mb-5">
        <%= link_to "Check consumption", functions_goods_consumption_path%>
    </div>
    <hr>
    <section class="my-5">
        <div class="flex justify-end">
            <span class="font-bold text-lg "> Clients who Owe Us</span>
        </div>
        <div class="grid grid-cols-6 gap-2">
            <% @debtors.each do |k,v| %>
                <% if v > 0 %>
                    <div class="flex flex-col border border-red-400 rounded-md p-4">
                        <div><%= link_to k, client_path(Client.where(name: k)[0].id) , class: "hover:text-blue-500"%></div>
                        <hr>
                        <div> <%= v%></div>
                    </div>
                <% end %>
            <% end %>
        </div>
    </section>
    <hr>
     <section class="my-5">
        <div class="flex justify-end">
            <span class="font-bold text-lg "> Clients whom we Owe</span>
        </div>
        <div class="grid grid-cols-6 gap-2">
            <% @debtors.each do |k,v| %>
                <% if v < 0 %>
                    <div class="flex flex-col border border-blue-400 rounded-md p-4">
                        <div><%= link_to k, client_path(Client.where(name: k)[0].id) %></div>
                        <hr>
                        <div> <%= v*(-1)%></div>
                    </div>
                <% end %>
            <% end %>
        </div>
    </section>
</section>
