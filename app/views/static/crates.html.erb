<turbo-frame id="crates">
    <%= form_with model: @command  do |form| %>
        <div class="grid grid-cols-4 gap-4">
            <div class="my-5 col-span-2">
            <%= form.label :brasseries_crates_given , class: "inline-block text-yellow-500 bg-gray-900"%>
            <%= form.text_field :brasseries_crates_given, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
            </div>
            <div class="my-5 col-span-2">
            <%= form.label :guinness_crates_given , class: "inline-block text-yellow-500 bg-gray-900"%>
            <%= form.text_field :guinness_crates_given, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
            </div>
        </div>
                    <div class="inline ">
                <%= form.submit "Validate",class: "rounded-md py-2 px-5 bg-blue-600 text-white inline-block font-extralight cursor-pointer" %>
            </div>
    <% end %>
</turbo-frame>
