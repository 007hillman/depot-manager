<%= form_with(model: cash_movement, class: "contents") do |form| %>
<div  data-controller= "good">
  <% if cash_movement.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(cash_movement.errors.count, "error") %> prohibited this cash_movement from being saved:</h2>

      <ul>
        <% cash_movement.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :amount %>
    <%= form.text_field :amount, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

<div class="flex flex-row gap-10" >
    <div class="my-5" id="cash_in">
    <%= form.label :cash_in %>
    <%= form.check_box :cash_in, class: "block mt-2 h-5 w-5"  , data: {action: "click->good#hideCashOut"}%>
  </div>

  <div class="my-5 " id="cash_out">
    <%= form.label :cash_out %>
    <%= form.check_box :cash_out, class: "block mt-2 h-5 w-5" , data: {action: "click->good#hideCashIn"}%>
  </div>
</div>

  <div class="my-5">
    <%= form.label :person %>
    <%= form.text_field :person, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" , data: {action: "click->good#check"}%>
  </div>
</div>
<% end %>
