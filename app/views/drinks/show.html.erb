<div class="mx-auto  w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @drink %>
    <%= link_to 'Back to drinks', drinks_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium hover:bg-gray-900 hover:text-white hover:font-semibold" %>
    <%= link_to 'Edit this drink', edit_drink_path(@drink), class: "mt-2 rounded-lg py-3 px-5 bg-green-100 inline-block font-medium text-green-600 hover:bg-green-600 hover:text-green-200 hover:font-semibold" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this drink', drink_path(@drink), method: :delete, class: "mt-2 rounded-lg py-3 px-5  font-medium bg-red-100 text-red-600 hover:bg-red-600 hover:text-red-200 hover:font-semibold" %>
    </div>

<div class="mt-10 ">
    <h1 class="uppercase font-bold"> Transaction History </h1>
    <div class="my-5 grid grid-cols-3 font-bold bg-gray-800 text-white uppercase">
      <div>Date Bought</div>
      <div>client</div>
      <div>Quantity bought </div>
    </div>
  <ul>
    <% sum = 0 %>

  </ul>
  <div class="my-5">
    <%= "Total " + @drink.name + " bought is : " + sum.round(2).to_s + " " + @drink.packaging + "(s)" %>
  </div>
</div>
  </div>

  
</div>
