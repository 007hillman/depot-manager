<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Drinks</h1>
    <%= link_to 'New drink', new_drink_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <%= form_with(url: drinks_path, method: :get, data: {turbo_frame: "drinks",turbo_action: "advance"}) do |form| %>

    <%= form.label :query, "Search by drink name:", class: "block mb-2" %>
    <div class="flex space-x-3">
      <%= form.text_field :query, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full ring-0 focus:ring-4 focus:ring-orange-100 focus:shadow-none focus:border-orange-500 focus:outline-none",  data: {action: "input->drinks#search"} %>

      <%= form.submit 'Search', class: "px-4  font-medium
    bg-orange-300 text-neutal-900 rounded flex items-center cursor-pointer hover:bg-orange-400 text-white focus:ring-4 ring-0 focus:ring-orange-100" %>
    </div>
<% end %>
  <div class="grid md:grid-cols-8">
    <p class="my-5">
      <strong class="block font-medium mb-1">Name:</strong>
    </p>
  
    <p class="my-5">
      <strong class="block font-medium mb-1">Supplyer:</strong>
    </p>
  
    <p class="my-5">
      <strong class="block font-medium mb-1">Size:</strong>
    </p>
  
    <p class="my-5">
      <strong class="block font-medium mb-1">Packaging:</strong>
    </p>
  
    <p class="my-5">
      <strong class="block font-medium mb-1">Alcoholic:</strong>
    </p>
  
    <p class="my-5">
      <strong class="block font-medium mb-1">Retail price:</strong>
    </p>
  
    <p class="my-5">
      <strong class="block font-medium mb-1">Wholesale price:</strong>
    </p>
  </div>
  <div id="drinks" class="min-w-full">
    <%= turbo_frame_tag "drinks" do %>
      <%= render @drinks %>
    <% end %>
  </div>
</div>
