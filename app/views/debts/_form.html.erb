<%= form_with(model: debt, class: "contents") do |form| %>
  <% if debt.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(debt.errors.count, "error") %> prohibited this debt from being saved:</h2>

      <ul>
        <% debt.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :client_name %>
    <%= form.text_field :client_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", list: "clients" %>
    <datalist id="clients">
      <% @clients.each do |client| %>
        <option><%= client.name %></option>
      <% end %>
    </datalist>
  </div>

  <div class="my-5">
    <%= form.label :cash_in %>
    <%= form.text_field :cash_in, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :cash_out %>
    <%= form.text_field :cash_out, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
