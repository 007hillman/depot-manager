<div id="<%= dom_id payment %>">

  <div class="grid grid-cols-3 list">
    <p class="my-5">
    <strong class="block font-medium mb-1">Client:</strong>
    <%= Client.find(payment.client_id).name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Amount:</strong>
    <%= payment.amount %>
  </p>
  <p>
    <strong class="block font-medium mb-1"> Date : </strong>
    <%= payment.created_at.strftime("%d-%m-%Y") %>
  </p>
  </div>
  
</div>
