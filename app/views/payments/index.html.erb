<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Payments</h1>
    <%= link_to 'New payment', new_payment_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="payments" class="min-w-full">
      <div class=" mt-5 w-full flex justify-center items-center">
    <%= form_with url: payments_path , method: :get, class: "w-full flex border border-blue-200 hover:border-blue-400 hover:border-2 focus:border-2 focus:border-blue-400 rounded-lg" do |form|%>
      <%= form.select :query , options_for_select(Client.all.order("name").map {|x| [x.name, x.id]}), {}, { class: "grow border-0" }%>
      <%= form.submit "search" , class: "bg-blue-400 px-6 rounded-r-lg" %>
    <% end %>
  </div>
    <%= render @payments %>
  </div>
</div>
