<%= form_with(model: payment, class: "contents") do |form| %>
  <% if payment.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
        <% payment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div data-controller="debts">
  <div class="my-5">
    <%= form.label :client_id %>
    <%= form.text_field :client_id, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" , data: {action: "keyup->debts#search_names"}%>
    <div id="">
      <ul id="result">
      
      </ul>
     </div>
  </div>

  <div class="my-5">
    <%= form.label :amount_paid %>
    <%= form.text_field :amount_paid, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", required: true %>
  </div>

  <div class="my-5">
    <%= form.label :command_id %>
    <%= form.text_field :command_id, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" , placeholder: "enter the command id on the receipt", required: true%>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
</div>
<% end %>
